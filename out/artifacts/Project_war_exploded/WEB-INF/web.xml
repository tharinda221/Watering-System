<?xml version="1.0" encoding="ISO-8859-1"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd"
          version="2.4">

    <servlet>
        <servlet-name>WateringSystem</servlet-name>
        <servlet-class>WateringSystem.WateringSystem</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>WateringSystem</servlet-name>
        <url-pattern>/wateringsystem</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Welcome</servlet-name>
        <servlet-class>WateringSystem.Welcome</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Welcome</servlet-name>
        <url-pattern>/welcome</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ajaxHandle</servlet-name>
        <servlet-class>WateringSystem.ajaxHandle</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>ajaxHandle</servlet-name>
        <url-pattern>/ajaxHandle</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>login.LoginServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>Watering</servlet-name>
        <servlet-class>WateringSystem.Watering</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>Watering</servlet-name>
        <url-pattern>/watering</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>wateringTime</servlet-name>
        <servlet-class>WateringSystem.wateringTime</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>wateringTime</servlet-name>
        <url-pattern>/wateringTime</url-pattern>
    </servlet-mapping>


    <welcome-file-list>
        <welcome-file>LoginPage.jsp</welcome-file>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>